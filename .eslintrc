{
  "extends": [
    "airbnb-base",
    "plugin:node/recommended",
    "plugin:security/recommended"
  ],
  "env": {
    "node": true,
    "browser": true
  },
  "plugins": [
    "security",
    "import"
  ],
  "rules": {
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }],
    "no-console": "off",
    "no-unused-vars": "off",
    "consistent-return": "off",
    "no-underscore-dangle": ["error", { "allow": ["_role", "_resource", "_action"] }],
    "quote-props": "off",
    "func-names": ["error", "never"]
  }
}
